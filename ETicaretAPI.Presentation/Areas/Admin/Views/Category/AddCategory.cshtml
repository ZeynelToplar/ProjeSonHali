@model Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<br />
<br />
<br />
<br /><br /><br />
<h1>Kategori Ekleme Sayfası</h1>

<form method="post" asp-action="AddCategory" asp-controller="Category" asp-area="admin">
    <div class="container">
        <div class="form-group">
            <label>Kategori</label>
            <select asp-for="ParentId" asp-items="@ViewBag.Categories" class="form-control"></select>
            <br />
            <label>Adı</label>
            <input type="text" asp-for="CategoryName" class="form-control" />
            <br />
            <label>Açıklaması</label>
            <input type="text" asp-for="CategoryDescription" class="form-control" />
            <br />
            <input class="btn btn-behance" type="submit" value="Ekle" />
        </div>
    </div>
</form>


